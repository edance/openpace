<%= form_for @changeset, @action, fn f -> %>
  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= label f, :name, class: "control-label" %>
    <%= text_input f, :name, class: "form-control" %>
    <%= error_tag f, :name %>
  </div>

  <div class="form-group">
    <%= label f, :stripe_id, class: "control-label" %>
    <%= text_input f, :stripe_id, class: "form-control" %>
    <%= error_tag f, :stripe_id %>
  </div>

  <div class="form-group">
    <%= label f, :last4, class: "control-label" %>
    <%= text_input f, :last4, class: "form-control" %>
    <%= error_tag f, :last4 %>
  </div>

  <div class="form-group">
    <%= label f, :exp_month, class: "control-label" %>
    <%= number_input f, :exp_month, class: "form-control" %>
    <%= error_tag f, :exp_month %>
  </div>

  <div class="form-group">
    <%= label f, :exp_year, class: "control-label" %>
    <%= number_input f, :exp_year, class: "form-control" %>
    <%= error_tag f, :exp_year %>
  </div>

  <div class="form-group">
    <%= submit "Submit", class: "btn btn-primary" %>
  </div>
<% end %>
