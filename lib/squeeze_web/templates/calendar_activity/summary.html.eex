<%= for activity <- ordered_activities(assigns) do %>
  <%= if activity.status == :pending do %>
    <%= render("_planned.html", Map.merge(assigns, %{activity: activity})) %>
  <% else %>
    <%= render("_completed.html", Map.merge(assigns, %{activity: activity})) %>
  <% end %>
<% end %>

<%= if race_date?(assigns) do %>
  <%= render("_race.html", assigns) %>
<% end %>
