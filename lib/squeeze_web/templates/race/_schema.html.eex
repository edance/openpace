       "addressRegion": "<%= @race.state %>",
       "addressCountry": "<%= @race.country %>"
     }
   },
   "startDate": "<%= start_at(assigns) %>",
   "description": "",
   "url": "<%= @race.url %>",
   "image": ""
 }
</script>
