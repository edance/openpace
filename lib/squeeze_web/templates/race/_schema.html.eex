<script type="application/ld+json">
 {
   "@context": "http://schema.org",
   "@type": "SportsEvent",
   "name": "<%= @race.name %>",
   "location": {
     "@type": "Place",
     "name": "<%= @race.city %>",
     "address": {
       "@type": "PostalAddress",
       "streetAddress": "<%= @race.address_line1 %>",
       "addressLocality": "<%= @race.state %>",
