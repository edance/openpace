<h2>Listing Training plans</h2>

<table class="table">
  <thead>
    <tr>
      <th>Name</th>

      <th></th>
    </tr>
  </thead>
  <tbody>
<%= for plan <- @training_plans do %>
    <tr>
      <td><%= plan.name %></td>

      <td class="text-right">
        <span><%= link "Show", to: plan_path(@conn, :show, plan), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Edit", to: plan_path(@conn, :edit, plan), class: "btn btn-default btn-xs" %></span>
        <span><%= link "Delete", to: plan_path(@conn, :delete, plan), method: :delete, data: [confirm: "Are you sure?"], class: "btn btn-danger btn-xs" %></span>
      </td>
    </tr>
<% end %>
  </tbody>
</table>

<span><%= link "New Plan", to: plan_path(@conn, :new) %></span>
