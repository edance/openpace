<%= if @current_user do %>
  <h2>Welcome, <%= @current_user.name %>!</h2>
  <%= link to: auth_path(@conn, :delete), class: "btn btn-primary" do %>
    Log Out
  <% end %>
<% else %>
  <%= link to: auth_path(@conn, :request, "squeeze"), class: "btn btn-primary" do %>
    Sign in with Squeeze
  <% end %>
<% end %>
