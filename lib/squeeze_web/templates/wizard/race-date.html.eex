<h1 class="display-4 font-weight-normal">
  <%= gettext "When is your next race?" %>
</h1>

<%= async_form @changeset, wizard_path(@conn, :update, @step), fn f -> %>
  <div class="form-group">
    <%= input f, :race_date, class: "date-picker form-control" %>
    <%= error_tag f, :race_date, class: "d-block" %>
  </div>

  <%= submit "Next", class: "btn btn-primary" %>
<% end %>
