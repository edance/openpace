<h2>What is your current personal record?</h2>

<%= async_form @changeset, wizard_path(@conn, :update, @step), fn f -> %>

  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="field">
    <%= duration_select f, :personal_record, class: "dropdown" %>
    <%= error_tag f, :personal_record %>
  </div>

  <%= submit "Next", class: "primary button" %>
<% end %>
