<h1 class="display-4 font-weight-normal">What is your level of experience?</h1>

<%= async_form @changeset, wizard_path(@conn, :update, @step), fn f -> %>

  <%= if @changeset.action do %>
    <div class="alert alert-danger">
      <p>Oops, something went wrong! Please check the errors below.</p>
    </div>
  <% end %>

  <div class="form-group">
    <%= pill_button(f, :experience, "Beginner", 0) %>
    <%= pill_button(f, :experience, "Intermediate", 1) %>
    <%= pill_button(f, :experience, "Expert", 2) %>
    <%= error_tag f, :experience %>
  </div>

  <%= submit "Next", class: "btn btn-primary" %>
<% end %>
