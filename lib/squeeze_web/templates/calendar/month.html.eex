<div class="header bg-waves pb-5 pt-5 pt-md-6">
  <div>
    <div class="d-none d-md-flex row no-gutters">
      <div class="col small text-center"><%= gettext("Week") %></div>

      <%= for date <- Enum.take(@dates, 7) do %>
        <div class="col small text-center">
          <%= Timex.format!(date, "%a", :strftime) %>
        </div>
      <% end %>
    </div>

    <%= render("_calendar.html", assigns) %>
  </div>
</div>

<%= render SqueezeWeb.ModalView, "activity.html", assigns %>
