<% data = svg_path(@polyline) %>
<div class="svg-polyline-component bg-gradient-default position-relative">
  <svg viewport="0 0 400 400"
       preserveAspectRatio="xMidYMid meet"
       viewBox={"#{data.x} #{data.y} #{data.width} #{data.height}"}
  >
    <g>
      <path style={"stroke: white; stroke-width: #{data.stroke_width}; fill: none;"} d={data.path}></path>
    </g>
  </svg>
</div>
