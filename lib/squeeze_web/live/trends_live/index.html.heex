    </div>

    <div class="col-span-12 xl:col-span-9">
      <div class="card">
        <div class="card-header">
          <div class="row align-items-center">
            <div class="col">
              <h6 class="text-light uppercase ls-1 mb-1">
                <%= gettext("Activities") %>
              </h6>
              <h5 class="h3 text-white mb-0">
                <%= gettext("Running Bubbles") %>
